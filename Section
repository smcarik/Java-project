  }
  /**
   * checks what course this is a section of
   * @param course name of course
   **/
  public Boolean isSectionOf(Course course)
  {
    if(course.offeredAsSection.contains(sectionNo))
    {
     return true; 
    }
    else
    {
    return false;
    }
  }
}
