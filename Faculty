import java.util.*;
/**
 * This class extends Professor.
 * This class adds and finds a professor, and makes sure the position is open
 */
public class Faculty
{
  private Map<String, Professor> professors = new HashMap<String, Professor>();
  private Professor professor;
  
  /**
   * This method displays any info about a professor
   */
  public void display()
  {
    for(String ssn : professors.keySet())
    {
      professor = professors.get(ssn);
      //this line may not work when testing.
      String name = professor.toString();
      System.out.println("key: " + ssn + " Professors: " + name);
    }
  }
  /**
   * this method adds a new professor to the list of professors
   */
  public void addProfessor(String ssn, Professor proffesor)
  {
    professors.put(ssn,proffesor);
  }
  
  /**
   * Given an ssn, this method checks for a professor and finds one
   * @param ssn
   */
  public String findProfessor(String ssn)
  {
    if(professors.containsKey(ssn))
    {
      professor = professors.get(ssn);
      //this line may not work when testing.
      String name = professor.toString();
      return "The professor with the ssn: " + ssn + " is " + name;
    }
    else
    {
     return "There is no professor with that ssn in our system."; 
    }
  }
  
  /**
   * This method checks to see if the professor is empty, as in number of classes they teach
   */
  public Boolean isEmpty()
  {
    if(professors.isEmpty())
      return true;
    else
      return false;
  }
}
